{
    "ecmaFeatures": {
        "modules": true,
        "arrowFunctions": true,
        "blockBindings": true,
        "destructuring": true,
        "classes": true
    },
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true,
        "commonjs": true,
        "nodejs": true
    },
    "globals": {
        "angular": true,
        "inject": true
    },
    "extends": "eslint:recommended"
}